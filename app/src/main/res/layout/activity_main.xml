<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/scenery"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="321dp"
        android:layout_height="100dp"
        android:soundEffectsEnabled="false"
        android:text="MULTI MUSIC"
        android:textColor="#E91E63"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="360dp"
        android:layout_height="0dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="31dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.0">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="168dp"
            android:layout_height="160dp"
            android:onClick="PlayTheSong"
            android:tag="interstellar_instrumental_song"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/interstellar_poster"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="193dp"
            android:layout_height="160dp"
            android:onClick="PlayTheSong"
            android:tag="let_me_down_song"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/let_me_down_slowly_poster"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="169dp"
            android:layout_height="158dp"
            android:onClick="PlayTheSong"
            android:tag="on_and_on_song"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/on_and_on_poster"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="194dp"
            android:layout_height="153dp"
            android:onClick="PlayTheSong"
            android:tag="play_date_song"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/play_date_poster"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="170dp"
            android:layout_height="197dp"
            android:onClick="PlayTheSong"
            android:tag="sajna_song"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/sajna_poster"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="193dp"
            android:layout_height="195dp"
            android:onClick="PlayTheSong"
            android:tag="tujhe_kitna_chahne_song"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/tujhe_kitna_chahne_lage_hum_postee"
            tools:ignore="SpeakableTextPresentCheck" />
    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="385dp"
        android:layout_height="40dp"
        android:layout_marginTop="88dp"
        android:layout_marginBottom="29dp"
        android:text="To Play A New Song Please Reopen The App"
        android:textColor="#03A9F4"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>